<h3>施設新規登録</h3>
<%= render "devise/shared/error_messages", resource: @room %>

<%= form_with model: @room do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"施設名" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction ,"施設詳細" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>

    <tr>
      <th><%= f.label :price ,"料金（円）" %></th>
      <td><%= f.number_field :price %></td>
    </tr>

    <tr>
      <th><%= f.label :address ,"住所" %></th>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <th><%= f.label :room_icon ,"イメージ画像" %></th>
      <td><%= f.file_field :room_icon %></td>
  </table>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "登録済み一覧へ", '/rooms' %></li>
    </ul>
  </div>
<% end %>