<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>宿泊料金</th>
      <th>作成日</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
        <% if room.room_icon.attached? %>
          <%= image_tag room.room_icon, class:"room_image_size" %>
        <% else %>
          <%= image_tag 'default_room_image.png', class:"room_image_size" %>
        <% end %>
        </td>
        <td><%= link_to room.name, room %></td>
        <td><%= room.introduction %></td>
        <td><%= number_to_currency(room.price,precision: 0, unit: "¥") %>~</td>
        <td><%= room.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>