<div class="mx-auto text_align_center p-5" style="width: 30%">
  <p>フリーワード検索</p>
  <%= form_with url: search_rooms_path, method: :get do |f| %>
    <%= f.text_field :keyword, class: "form-control" %>
    <%= f.submit "検索", class: "form-control mx-auto", style: "width: 20%" %>
  <% end %>
</div>

<div class="mx-auto text_align_center p-5" style="width: 30%">
  <p>エリア検索</p>
  <%= form_with url: search_address_rooms_path, method: :get do |f| %>
    <%= f.text_field :keyword, class: "form-control" %>
    <%= f.submit "検索", class: "form-control mx-auto", style: "width: 20%" %>
  <% end %>
</div>

<div class="text_align_center p-5">
  <p>おすすめのエリア（↓リンクをクリック）</p>
  <%= link_to "東京", search_address_rooms_path(keyword: "東京") %>
  <%= link_to "大阪", search_address_rooms_path(keyword: "大阪") %>
  <%= link_to "京都", search_address_rooms_path(keyword: "京都") %>
  <%= link_to "札幌", search_address_rooms_path(keyword: "札幌") %>
</div>